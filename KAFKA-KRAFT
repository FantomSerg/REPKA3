      - kafka-broker
      - kafka-broker2
      - kafka-controller-1
      - kafka-controller-2
      - kafka-controller-3
    environment:
      SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS: kafka-broker:29096,kafka-broker2:29097
