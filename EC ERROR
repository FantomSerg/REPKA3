# Этап 1: Билд Node.js окружения
FROM node:20-alpine AS builder

WORKDIR /app

# Устанавливаем EventCatalog и нужные плагины
RUN npm install -g \
    eventcatalog/create-catalog \
    eventcatalog/generator-openapi \
    eventcatalog/asyncapi

# Этап 2: Финальный легковесный образ
FROM node:20-alpine

WORKDIR /app

# Копируем EventCatalog из builder-образа
COPY --from=builder /usr/local/lib/node_modules /usr/local/lib/node_modules
COPY --from=builder /usr/local/bin /usr/local/bin

# Устанавливаем рабочую директорию каталога (позже можно изменить)
WORKDIR /eventcatalog

# Открываем порт EventCatalog
EXPOSE 3000

# Команда по умолчанию
CMD ["eventcatalog", "start"]






